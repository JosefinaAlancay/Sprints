<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

    <body>
        <%- include('./partials/headerUser') %>
            <main>
                <h2>Register</h2>
                <div class="contenedor_main">
                    <form>
                        <div class="User">
                            <div class="form_group">
                                <label>Full Name</label>
                                <input class="form_input" type="text" name="full_name">
                            </div>
                            <div class="form_group">
                                <label>Adress</label>
                                <input class="form_input" type="text" name="address">
                            </div>
                            <div class="form_group">
                                <label>Postal Code</label>
                                <input class="form_input" type="text" name="postal_code">
                            </div>
                        </div>
                        <div class="User">
                            <div class="form_group">
                                <label>Email</label>
                                <input class="form_input" type="email" name="email">
                            </div>
                            <div class="form_group">
                                <label>Username</label>
                                <input class="form_input" type="text" name="username">
                            </div>
                            <div class="form_group">
                                <label>Password</label>
                                <input class="form_input" type="text" name="password">
                            </div>
                        </div>
