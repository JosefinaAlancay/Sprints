                            <label>Choose your avatar</label>
                            <input class="input_image" type="file" name="avatar">
                        </div>
                        <button type="submit">Register</button>
                        <div class="forgot_password">
                            <div class="remember">
                                <input class="box" type="checkbox">
                                <p>Remember</p>
                            </div>
                            <div class="forgot_password">
